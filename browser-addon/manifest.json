{
    "manifest_version": 3,
    "name": "nicovideo2discord",
    "version": "0.0.1",
    "description": "ニコニコ動画を見ている際の動画情報をDiscordに表示します。",
    "host_permissions": [
        "http://localhost:5000/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://www.nicovideo.jp/watch/*"],
            "js": ["main.js"]
        },
        {
            "matches": ["*://www.nicovideo.jp/video_top"],
            "js": ["videointroduction.js"]
        }
    ]
}
